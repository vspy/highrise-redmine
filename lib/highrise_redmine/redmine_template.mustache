{{#content}}
<?xml version="1.0"?>
<issue>
  <subject>{{subject}}</subject>
  <project_id>{{project_id}}</project_id>
  <priority_id>{{priority_id}}</priority_id>
{{! category_id, assigned_to_id and status_id are optional }}
{{#category_id}}
  <category_id>{{category_id}}</category_id>
{{/category_id}}
{{#status_id}}
  <status_id>{{status_id}}</status_id>
{{/status_id}}
{{#assigned_to_id}}
  <assigned_to_id>{{assigned_to_id}}</assigned_to_id>
{{/assigned_to_id}}
  <description>
{{body}}
  </description>
  <custom_field_values>
{{#custom_fields}}
    <{{id}}>{{value}}</{{id}}>
{{/custom_fields}}
  </custom_field_values>
{{#notes}}
  <notes>{{.}}</notes>
{{/notes}}
</issue>
{{/content}}
